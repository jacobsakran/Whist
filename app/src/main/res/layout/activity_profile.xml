<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pbg"
    tools:context=".Profile">


    <TextView
        android:id="@+id/profile_money"
        android:layout_width="164dp"
        android:layout_height="35dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="132dp"
        android:text="TextView"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_rank" />

    <TextView
        android:id="@+id/profile_rank"
        android:layout_width="108dp"
        android:layout_height="30dp"
        android:layout_marginStart="155dp"
        android:layout_marginTop="63dp"
        android:layout_marginEnd="175dp"
        android:layout_marginBottom="43dp"
        android:text="TextView"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/profile_money"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Play"
        android:layout_width="305dp"
        android:layout_height="100dp"
        android:layout_marginStart="53dp"
        android:layout_marginTop="466dp"
        android:layout_marginEnd="53dp"
        android:text="Click To Play!"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/log_out_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_rank"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/log_out_profile"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_marginStart="155dp"
        android:layout_marginEnd="156dp"
        android:layout_marginBottom="26dp"
        android:text="Log Out"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/timerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="164dp"
        android:text="click to get daily money"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_money" />

    <Button
        android:id="@+id/requestsProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="112dp"
        android:layout_marginTop="460dp"
        android:text="friends requests"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/numOfRequestes"
        android:layout_width="75dp"
        android:layout_height="33dp"
        android:layout_marginStart="276dp"
        android:layout_marginTop="428dp"
        android:background="@color/teal_700"
        android:text="TextView"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/requestsProfile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


    <LinearLayout
        android:id="@+id/requestLayoutProfile"
        android:layout_width="411dp"
        android:layout_height="408dp"
        android:layout_marginTop="194dp"
        android:layout_marginBottom="129dp"
        android:background="@color/white"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/back_profile"
        android:layout_width="87dp"
        android:layout_height="48dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="15dp"
        android:text="Back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/coin"
        android:layout_width="34dp"
        android:layout_height="36dp"
        android:layout_marginTop="64dp"
        app:layout_constraintStart_toEndOf="@+id/profile_money"
        app:layout_constraintTop_toBottomOf="@+id/back_profile"
        app:srcCompat="@drawable/coin" />

    <ImageView
        android:id="@+id/star"
        android:layout_width="37dp"
        android:layout_height="34dp"
        android:layout_marginTop="59dp"
        app:layout_constraintStart_toEndOf="@+id/profile_rank"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/btn_star_big_on" />

    <TextView
        android:id="@+id/MyFriendRequestsText"
        android:layout_width="416dp"
        android:layout_height="39dp"
        android:layout_marginBottom="1dp"
        android:background="#2196F3"
        android:text="My Friend Requests"
        android:textSize="29sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/requestLayoutProfile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>